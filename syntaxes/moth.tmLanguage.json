{
	"$schema": "https://raw.githubusercontent.com/martinring/tmlanguage/master/tmlanguage.json",
	"name": "Moth",
	"patterns": [
		{
			"include": "#comments"
		},
		{
			"include": "#keywords"
		},
		{
			"include": "#constants"
		},
		{
			"include": "#strings"
		},
		{
			"include": "#chars"
		},
		{
			"include": "#types"
		},
		{
			"include": "#attributes"
		},
		{
			"include": "#functions"
		},
		{
			"include": "#variables"
		}
	],
	"repository": {
		"comments": {
			"patterns": [
				{
					"name": "comment.line.moth",
					"match": "//.*$"
				}
			]
		},
		"keywords": {
			"patterns": [
			{
				"name": "keyword.control.moth",
				"match": "\\b(if|while|else|attempt|seize|every|then|or|and)\\b"
			},
			{
				"name": "keyword.other.moth",
				"match": "\\b(namespace|class|foreign|func|static|public|private|local|return|ref)\\b"
			}
		]
		},
		"constants": {
			"patterns": [
				{
					"name": "constant.numeric.moth",
					"match": "\\b[0-9]+"
				},
				{
					"name": "constant.character.escape.moth",
					"match": "\\b(self|null|true|false|pi)\\b"
				}
			]
		},
		"chars": {
			"name": "string.quoted.single.moth",
			"begin": "'",
			"end": "'",
			"patterns": [
				{
					"name": "constant.character.escape.moth",
					"match": "\\\\."
				}
			]
		},
		"strings": {
			"name": "string.quoted.double.moth",
			"begin": "\"",
			"end": "\"",
			"patterns": [
				{
					"name": "constant.character.escape.moth",
					"match": "\\\\."
				}
			]
		},
		"types": {
			"patterns": [
				{
					"name": "support.type.moth",
					"match": "(#|\\?)[A-Za-z0-9]+\\*?"
				},
				{
					"name": "support.type.moth",
					"match": "<\\\\\\*?"
				},
				{
					"name": "support.type.moth",
					"match": "\\\\>\\*?"
				}
			]
		},
		"attributes": {
			"patterns": [
				{
					"name": "string.regexp",
					"match": "@[A-Za-z0-9_]+"
				}
			]
		},
		"functions": {
			"patterns": [
				{
					"name": "support.function.moth",
					"match": "[A-Za-z0-9_]+\\("
				}
			]
		},
		"variables": {
			"patterns": [
				{
					"name": "variable.name.moth",
					"match": "[A-Za-z0-9_]+\\b"
				}
			]
		}
	},
	"scopeName": "source.moth"
}